.page_part{:id => new_part ? "page_part_new_#{part_index}" : part.to_param}
  = hidden_field_tag "page[parts_attributes][#{part_index}][title]", part.title if new_part
  
  - edit_class = ( RefinerySetting.get(:gardenia_parts_allow_widgets).include?(part.title) ? '' : 'wymeditor widest' )
  
  = text_area_tag "page[parts_attributes][#{part_index}][body]", part.body, :rows => 20, :class => edit_class
  = hidden_field_tag "page[parts_attributes][#{part_index}][position]", part_index if new_part
