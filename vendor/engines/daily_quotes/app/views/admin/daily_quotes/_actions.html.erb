<ul>
  <% if Admin::DailyQuotesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_daily_quotes_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_daily_quote_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::DailyQuotesController.sortable? and DailyQuote.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Daily Quotes"),
                 admin_daily_quotes_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Daily Quotes"),
                 admin_daily_quotes_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>