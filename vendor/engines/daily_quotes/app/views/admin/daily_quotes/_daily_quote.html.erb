<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(daily_quote) -%>">
  <span class='title'>
    <%= raw( daily_quote.to_s ) %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), daily_quote_path(daily_quote),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_daily_quote_path(daily_quote),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_daily_quote_path(daily_quote),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => daily_quote.theme),
        :method => :delete %>
  </span>
</li>
