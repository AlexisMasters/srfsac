<ul>
  <% if Admin::EventCalendarsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_event_calendars_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_event_calendar_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::EventCalendarsController.sortable? and EventCalendar.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Event Calendars"),
                 admin_event_calendars_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Event Calendars"),
                 admin_event_calendars_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>